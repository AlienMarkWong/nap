#!/usr/sh
########################################################################
# Makefile for parallel MD
#     by Ryo Kobayashi
########################################################################

#-----------------------------------------------------------------------
# to be generated by configure script
#-----------------------------------------------------------------------
CPP= @CPP@
CPPFLAGS= @CPPFLAGS@
#CPPFLAGS= -D__SHEAR__ -D__DISL__ -D__KOUKYU__ -D__WALL__
MPIFC= @FC@
MPIFLAGS= @FCFLAGS@
#-----------------------------------------------------------------------
# suffixes
.SUFFIXES: .o .f .F .f90 .F90
.f.o: 
	${MPIFC} -c ${MPIFLAGS} $<
.F.o: 
	${MPIFC} -c ${MPIFLAGS} ${CPPFLAGS} $<
.f90.o: 
	${MPIFC} -c ${MPIFLAGS} $<
.F90.o: 
	${MPIFC} -c ${MPIFLAGS} ${CPPFLAGS} $<

all:
	cd src; make all "MPIFC=${MPIFC} MPIFLAGS=${MPIFLAGS} CPPFLAGS=${CPPFLAGS}"

clean:
	cd src; make clean

pmd:
	cd src; make pmd "MPIFC=${MPIFC} MPIFLAGS=${MPIFLAGS} CPPFLAGS=${CPPFLAGS}"
